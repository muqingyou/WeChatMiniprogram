.whole {
  height: 100%;
  position: relative;
}
.title {
  height: 3%;
  line-height: 40rpx;
  margin: 15rpx  15rpx;
  border-left: 10rpx solid #008800;
  padding-left: 12rpx;
}
.type {
  height: 15%;
}
.type radio-group {
  height: 90%;
  margin: 1% 30rpx;
  display: flex;
  flex-direction: column;
}
.type radio-group label {
  height: 30%;
  margin: 1% 0;
}
.type radio-group label radio {
  margin-right: 10rpx ;
}
.descri {
  height: 20%;
}
.descri .input-area {
  height: 90%;
}
.descri .input-area .text-area {
  margin: 5rpx auto;
  width: 85%;
  border: 2rpx solid gray;
  border-radius: 15rpx;
  padding: 10rpx;
}
.descri .clear .floatItem {
  display: inline-block;
  width: 95%;
  text-align: right;
}
.group {
  height: 5%;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.group .image_item {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  position: relative;
}
.group .image_item .delete-btn {
  position: absolute;
  top: 0;
  right: 0;
}
.group .selectpic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background-color: #e0e0e0;
}
.group .selectpic .pic {
  width: 80rpx;
  height: 80rpx;
}
.record {
  height: 10%;
}
.record button {
  background-color: white;
  border: 1rpx solid #b3b3b3;
  font: normal 400 30rpx 'Microsoft yahei';
}
.record button:active {
  background-color: #cccccc;
}
.record text {
  float: right;
}
.mapLoad {
  position: relative;
}
.mapLoad map {
  margin: 0 auto;
  width: 90%;
}
.mapLoad .location {
  position: absolute;
  left: 7%;
  bottom: 2%;
  width: 55rpx;
  height: 55rpx;
  z-index: 99;
}
.mapLoad .center {
  position: absolute;
  left: 50%;
  margin-left: -27.5rpx;
  bottom: 50%;
  margin-bottom: -27.5rpx;
  width: 55rpx;
  height: 55rpx;
}
.btn #commit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4dad4e;
  color: white;
  width: 90%;
  height: 5%;
  border-radius: 40rpx;
  margin: 15rpx auto;
}
.btn #commit-btn:active {
  background-color: #7da79a;
}
